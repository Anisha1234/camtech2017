    <!-- Javascript -->
    <script src="/javascript/jquery-1.11.1.min.js"></script>
    <script src="/javascript/bootstrap.min.js"></script>
    <script src="/javascript/jquery.backstretch.min.js"></script>
    <script src="/javascript/scripts.js"></script>
    <script>
    function transition(value) {
      if (value == 'organisation') {
        $('#dispcontact').hide();
        $("#dispcontact").prop('required',false);
        $('#dispmail').show();
        $("#dispmail").prop('required',true);
      }
      else {
        $('#dispmail').hide();
        $("#dispmail").prop('required',false);
        $('#dispcontact').show();
        $("#dispcontact").prop('required',true);
      }
    }
    function transition_log(value) {
      if (value == 'organisation') {
        $('#logcontact').hide();
        $("#logcontact").prop('required',false);
        $('#logmail').show();
        $("#logmail").prop('required',true);
      }
      else {
        $('#logmail').hide();
        $("#logmail").prop('required',false);
        $('#logcontact').show();
        $("#logcontact").prop('required',true);
      }
    }

    </script>
